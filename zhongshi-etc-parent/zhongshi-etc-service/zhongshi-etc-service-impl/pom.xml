<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.zhongshi</groupId>
		<artifactId>zhongshi-etc-service</artifactId>
		<version>1.0.0-RELEASE</version>
	</parent>
	<artifactId>zhongshi-etc-service-impl</artifactId>
	<packaging>pom</packaging>  



	<dependencies>

		<!-- Project Begin -->

		<dependency>
			<groupId>com.zhongshi</groupId>
			<artifactId>zhongshi-etc-common-tool</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>com.zhongshi</groupId>
			<artifactId>zhongshi-etc-service-base-run</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>com.zhongshi</groupId>
			<artifactId>zhongshi-etc-config-log</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>com.zhongshi</groupId>
			<artifactId>zhongshi-etc-config-sentinel</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>  
			<groupId>com.zhongshi</groupId>
			<artifactId>zhongshi-etc-config-bootadmin</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>  
			<groupId>com.zhongshi</groupId>   
			<artifactId>zhongshi-etc-config-sso</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		
		<dependency>
			<groupId>com.zhongshi</groupId>   
			<artifactId>zhongshi-etc-config-mvc</artifactId>
			<version>${project.version}</version>    
		</dependency>

		<!-- Project End -->




		


		<!-- Spring Boot Begin -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-tomcat</artifactId>
				</exclusion>
			</exclusions>
		</dependency>


		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-undertow</artifactId>
		</dependency>
		<!-- Spring Boot End -->




		<!-- SpringCloud Begin -->

		<dependency>
			<groupId>com.alibaba.cloud</groupId>
			<artifactId>spring-cloud-starter-alibaba-nacos-config</artifactId>
		</dependency>

		<!-- SpringCloud End -->

	</dependencies>





	<!-- boot打包 Begin -->

	<build>
		<finalName>${artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>2.1.5.RELEASE</version>
				<configuration>
					<mainClass>${application-run}</mainClass>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.springframework</groupId>
						<artifactId>springloaded</artifactId>
						<version>1.2.6.RELEASE</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- boot打包 End -->




 
	<modules>
		<module>zhongshi-etc-service-redis</module>
		<module>zhongshi-etc-service-user</module>
	</modules>


</project>